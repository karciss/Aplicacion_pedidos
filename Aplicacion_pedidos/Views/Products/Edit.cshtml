@model Aplicacion_pedidos.Models.ProductModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Producto</h2>
        <p class="text-muted">Modifique la información del producto</p>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Información del Producto</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" class="product-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">Nombre del producto</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-box2-heart"></i></span>
                            <input asp-for="Nombre" class="form-control" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Precio" class="form-label">Precio</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <input asp-for="Precio" class="form-control" min="0.01" step="0.01" type="number" />
                        </div>
                        <small class="text-muted">El precio debe ser mayor que cero</small>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Stock" class="form-label">Stock</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-boxes"></i></span>
                            <input asp-for="Stock" class="form-control" type="number" min="0" />
                        </div>
                        <small class="text-muted">El stock no puede ser negativo</small>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group form-check mt-4">
                        <input asp-for="Disponible" class="form-check-input" />
                        <label asp-for="Disponible" class="form-check-label">Disponible para la venta</label>
                    </div>
                </div>
            </div>
            
            <hr />
            <div class="form-group mt-3 d-flex">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-check-circle me-1"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Form validation highlight effect
            $('form').on('submit', function() {
                if (!this.checkValidity()) {
                    $('.text-danger').closest('.form-group').addClass('animate__animated animate__headShake');
                    setTimeout(function() {
                        $('.form-group').removeClass('animate__animated animate__headShake');
                    }, 1000);
                }
            });
            
            // Validación de precio positivo
            $('#Precio').on('change', function() {
                const precio = parseFloat($(this).val());
                if (precio <= 0) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
            
            // Validación de stock no negativo
            $('#Stock').on('change', function() {
                const stock = parseInt($(this).val());
                if (stock < 0) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}
