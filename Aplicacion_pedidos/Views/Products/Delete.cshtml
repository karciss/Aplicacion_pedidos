@model Aplicacion_pedidos.Models.ProductModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i>Eliminar Producto</h2>
        <p class="text-muted">¿Está seguro que desea eliminar este producto?</p>
    </div>
</div>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white py-3">
        <h5 class="mb-0">Confirmar Eliminación</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Esta acción no se puede deshacer. Se eliminará permanentemente el producto <strong>@Model.Nombre</strong>.
        </div>
        
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-box2-heart me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Nombre)</div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-tag me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Precio)
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Precio)</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-boxes me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Stock)
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Stock) unidades</div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-toggle-on me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Disponible)
                            </div>
                            <div class="detail-value">
                                @(Model.Disponible ? "Disponible" : "No disponible")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash me-1"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>
        </form>
    </div>
</div>
