@model Aplicacion_pedidos.Models.OrderModel

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="mb-0"><i class="bi bi-pencil me-2"></i>Editar Pedido</h2>
        <p class="text-muted mb-0">Modifique la información del pedido #@Model.Id</p>
    </div>
    <div class="col-md-6 text-end">
        <div class="d-flex justify-content-end">
            <a asp-action="Details" asp-route-id="@Model.Id" class="edit-button edit-primary me-2">
                <i class="bi bi-info-circle"></i> Ver Detalles
            </a>
            <a asp-action="Index" class="edit-button edit-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Listado
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Información del Pedido</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditBasic" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 p-3 bg-light rounded"></div>
            <input type="hidden" name="id" value="@Model.Id" />
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Cliente</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <select name="userId" class="form-select" asp-items="ViewBag.UserId"></select>
                        </div>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Fecha de Pedido</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                            <input name="fechaPedido" class="form-control" type="datetime-local" value="@Model.FechaPedido.ToString("yyyy-MM-ddTHH:mm")" />
                        </div>
                        <span asp-validation-for="FechaPedido" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Estado del Pedido</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <select name="estado" class="form-select">
                                @foreach (OrderStatus estado in Enum.GetValues(typeof(OrderStatus)))
                                {
                                    if (estado == Model.Estado)
                                    {
                                        <option value="@((int)estado)" selected>@estado</option>
                                    }
                                    else
                                    {
                                        <option value="@((int)estado)">@estado</option>
                                    }
                                }
                            </select>
                        </div>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                        <small class="text-muted">Seleccione el estado actual del pedido</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Total</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input id="totalDisplay" class="form-control bg-light" type="text" value="@Model.Total.ToString("C")" readonly />
                        </div>
                        <small class="text-muted">El total se calcula automáticamente en base a los elementos del pedido</small>
                    </div>
                </div>
            </div>
            
            <div class="border-top pt-3">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="edit-button edit-primary me-2">
                        <i class="bi bi-check-circle"></i> Guardar Cambios
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="edit-button edit-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Elementos del pedido -->
<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Elementos del Pedido</h5>
            <a asp-controller="OrderItem" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Añadir Producto
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Items != null && Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="orderItemsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-subtotal="@item.Subtotal">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="product-circle me-2">
                                            <i class="bi bi-box"></i>
                                        </div>
                                        <span>@(item.Producto != null ? item.Producto.Nombre : "Producto no disponible")</span>
                                    </div>
                                </td>
                                <td>@item.Cantidad</td>
                                <td class="item-subtotal">@item.Subtotal.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-controller="OrderItem" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-controller="OrderItem" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm delete-item-btn">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-cart-x" style="font-size: 2rem; color: #ccc;"></i>
                <p class="text-muted mt-2">No hay elementos en este pedido.</p>
                <a asp-controller="OrderItem" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Añadir el primer producto
                </a>
            </div>
        }
    </div>
</div>

<style>
    .product-circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Calcular el total de los elementos del pedido
            function calcularTotal() {
                let total = 0;
                
                // Iterar sobre cada fila de la tabla y sumar los subtotales
                $("#orderItemsTable tbody tr").each(function() {
                    
                    const subtotal = parseFloat($(this).attr("data-subtotal")) || 0;
                    total += subtotal;
                });
                
                // Formatear el total como moneda
                const formatter = new Intl.NumberFormat('es-ES', {
                    style: 'currency',
                    currency: 'EUR'
                });
                
                // Actualizar el campo de total
                $("#totalDisplay").val(formatter.format(total));
            }
            
            // Calcular el total al cargar la página
            calcularTotal();
            
            // Manejar el evento de clic en el botón de eliminar
            $(".delete-item-btn").on("click", function(e) {
                if (!confirm("¿Está seguro de que desea eliminar este elemento?")) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
