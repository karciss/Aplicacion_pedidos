@model Aplicacion_pedidos.Models.OrderModel

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="mb-0"><i class="bi bi-pencil me-2"></i>Editar Pedido</h2>
        <p class="text-muted">Modifique la información del pedido #@Model.Id</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
            <i class="bi bi-arrow-left me-1"></i> Volver a Detalles
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list me-1"></i> Volver al Listado
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Información del Pedido</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 p-3 bg-light rounded"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UserId" class="form-label">Cliente</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        </div>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FechaPedido" class="form-label">Fecha de Pedido</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                            <input asp-for="FechaPedido" class="form-control" type="datetime-local" />
                        </div>
                        <span asp-validation-for="FechaPedido" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Estado" class="form-label">Estado del Pedido</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
                        </div>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                        <small class="text-muted">Seleccione el estado actual del pedido</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Total" class="form-label">Total</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input asp-for="Total" class="form-control" readonly />
                        </div>
                        <span asp-validation-for="Total" class="text-danger"></span>
                        <small class="text-muted">El total se calcula automáticamente en base a los elementos del pedido</small>
                    </div>
                </div>
            </div>
            
            <div class="border-top pt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Guardar Cambios
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary ms-1">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
