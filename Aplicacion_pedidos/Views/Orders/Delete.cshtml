@model Aplicacion_pedidos.Models.OrderModel

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="mb-0"><i class="bi bi-trash me-2"></i>Eliminar Pedido</h2>
        <p class="text-muted">¿Está seguro de que desea eliminar este pedido?</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
            <i class="bi bi-arrow-left me-1"></i> Volver a Detalles
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list me-1"></i> Volver al Listado
        </a>
    </div>
</div>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <strong>Advertencia:</strong> Esta acción no se puede deshacer. Todos los datos del pedido se perderán permanentemente.
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Información del Pedido #@Model.Id</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Cliente:</span>
                        <span class="fw-medium">@Model.Cliente.Nombre (@Model.Cliente.Email)</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Fecha del pedido:</span>
                        <span>@Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Estado:</span>
                        @switch (Model.Estado)
                        {
                            case OrderStatus.Pendiente:
                                <span class="badge bg-warning text-dark">Pendiente</span>
                                break;
                            case OrderStatus.EnProceso:
                                <span class="badge bg-info text-dark">En Proceso</span>
                                break;
                            case OrderStatus.Enviado:
                                <span class="badge bg-primary">Enviado</span>
                                break;
                            case OrderStatus.Entregado:
                                <span class="badge bg-success">Entregado</span>
                                break;
                            case OrderStatus.Cancelado:
                                <span class="badge bg-danger">Cancelado</span>
                                break;
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Total:</span>
                        <span class="badge bg-light text-dark fs-6">
                            <i class="bi bi-currency-dollar me-1"></i>
                            @Model.Total.ToString("C")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" class="text-center">
    <input type="hidden" asp-for="Id" />
    <div class="mb-4">
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="bi bi-trash-fill me-2"></i> Eliminar Pedido
        </button>
    </div>
    <p class="text-muted">
        <i class="bi bi-info-circle me-1"></i> 
        Si el pedido tiene elementos asociados, no podrá ser eliminado. Elimine primero los elementos del pedido.
    </p>
</form>
