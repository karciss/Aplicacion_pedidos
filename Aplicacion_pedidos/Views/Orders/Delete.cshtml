@model Aplicacion_pedidos.Models.OrderModel

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="mb-0 text-danger"><i class="bi bi-trash me-2"></i>Eliminar Pedido</h2>
        <p class="text-muted">¿Está seguro que desea eliminar este pedido?</p>
    </div>
    <div class="col-md-6 text-end">
        <div class="d-flex justify-content-end">
            <a asp-action="Details" asp-route-id="@Model.Id" class="edit-button edit-primary me-2">
                <i class="bi bi-arrow-left"></i> Volver a Detalles
            </a>
            <a asp-action="Index" class="edit-button edit-secondary">
                <i class="bi bi-list"></i> Volver al Listado
            </a>
        </div>
    </div>
</div>

<div class="alert alert-danger">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <strong>Advertencia:</strong> Esta acción no se puede deshacer. Al eliminar el pedido se perderá toda la información relacionada.
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Información del Pedido</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">ID:</span>
                        <span class="fw-bold">@Model.Id</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Cliente:</span>
                        <span>@Model.Cliente.Nombre</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Fecha:</span>
                        <span>@Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Estado:</span>
                        @switch (Model.Estado)
                        {
                            case OrderStatus.Pendiente:
                                <span class="badge bg-warning text-dark">Pendiente</span>
                                break;
                            case OrderStatus.EnProceso:
                                <span class="badge bg-info text-dark">En Proceso</span>
                                break;
                            case OrderStatus.Enviado:
                                <span class="badge bg-primary">Enviado</span>
                                break;
                            case OrderStatus.Entregado:
                                <span class="badge bg-success">Entregado</span>
                                break;
                            case OrderStatus.Cancelado:
                                <span class="badge bg-danger">Cancelado</span>
                                break;
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Total:</span>
                        <span class="fw-bold">@Model.Total.ToString("C")</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <span class="text-muted">Elementos:</span>
                        <span>@(Model.Items?.Count ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" class="text-center">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="edit-button edit-danger">
        <i class="bi bi-trash me-1"></i> Eliminar Pedido
    </button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="edit-button edit-secondary ms-2">
        <i class="bi bi-x-circle me-1"></i> Cancelar
    </a>
</form>
