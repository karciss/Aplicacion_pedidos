@model Aplicacion_pedidos.Models.UserModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Crear Nuevo Usuario</h2>
        <p class="text-muted">Complete el formulario para registrar un nuevo usuario en el sistema</p>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Información del Usuario</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 p-3 bg-light rounded"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" type="email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Mínimo 6 caracteres" />
                            <button class="btn btn-outline-secondary toggle-password" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text text-muted">La contraseña debe tener al menos 6 caracteres.</div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Rol" class="form-label">Rol del Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <select asp-for="Rol" class="form-select">
                                <option value="">Seleccionar rol...</option>
                                <option value="@Aplicacion_pedidos.Models.UserModel.ROLE_ADMIN">Administrador</option>
                                <option value="@Aplicacion_pedidos.Models.UserModel.ROLE_CLIENTE">Cliente</option>
                                <option value="@Aplicacion_pedidos.Models.UserModel.ROLE_EMPLEADO">Empleado</option>
                            </select>
                        </div>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <hr />
            <div class="d-flex mt-3">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-person-check me-1"></i> Crear Usuario
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('.toggle-password').click(function() {
                var input = $(this).siblings('input');
                var icon = $(this).find('i');
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });
            
            // Form validation highlight effect
            $('form').on('submit', function() {
                if (!this.checkValidity()) {
                    $('.text-danger').closest('.form-group').addClass('animate__animated animate__headShake');
                    setTimeout(function() {
                        $('.form-group').removeClass('animate__animated animate__headShake');
                    }, 1000);
                }
            });
        });
    </script>
}
