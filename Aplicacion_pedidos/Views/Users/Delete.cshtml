@model Aplicacion_pedidos.Models.UserModel

@{
    ViewData["Title"] = "Eliminar Usuario";
    
    string badgeClass = Model.Rol switch
    {
        UserModel.ROLE_ADMIN => "bg-danger",
        UserModel.ROLE_EMPLEADO => "bg-success",
        UserModel.ROLE_CLIENTE => "bg-primary",
        _ => "bg-secondary"
    };

    string roleIcon = Model.Rol switch
    {
        UserModel.ROLE_ADMIN => "bi-shield-fill",
        UserModel.ROLE_EMPLEADO => "bi-person-badge-fill",
        UserModel.ROLE_CLIENTE => "bi-person-fill",
        _ => "bi-question-circle-fill"
    };
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i>Eliminar Usuario</h2>
        <p class="text-muted">¿Está seguro que desea eliminar este usuario?</p>
    </div>
</div>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white py-3">
        <h5 class="mb-0">Confirmar Eliminación</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Esta acción no se puede deshacer. Se eliminará permanentemente el usuario <strong>@Model.Nombre</strong>.
        </div>
        
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-person me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Nombre)</div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-envelope me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Email)
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-person-badge me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Rol)
                            </div>
                            <div class="detail-value">
                                <span class="badge rounded-pill @badgeClass">
                                    <i class="bi @roleIcon me-1"></i>
                                    @Html.DisplayFor(model => model.Rol)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash me-1"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>
        </form>
    </div>
</div>
